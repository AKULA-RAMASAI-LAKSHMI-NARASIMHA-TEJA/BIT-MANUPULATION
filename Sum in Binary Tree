import java.util.*;
public class Bit{
    public static void main(String args[]) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        for (int tc = 0; tc < t; tc++) {
            long n=sc.nextLong();
            long ans=n;
            while(n>0) {
                ans+=n/2;
                n/=2;
            }
            System.out.println(ans);
        }
    }
}
